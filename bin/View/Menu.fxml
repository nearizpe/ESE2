<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <menus>
      <Menu mnemonicParsing="false" text="Menu">
         <items>
            <Menu mnemonicParsing="false" text="Book">
              <items>
                <MenuItem fx:id="AddBookListMenuItem" mnemonicParsing="false" text="Book List" />
                  <MenuItem fx:id="AddBookMenuItem" mnemonicParsing="false" text="Add Book" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Authors">
              <items>
                  <MenuItem fx:id="AuthorListMenuItem" mnemonicParsing="false" onAction="#MenuHandler" text="Author List" />
                  <MenuItem fx:id="AddAuthorMenuItem" mnemonicParsing="false" onAction="#MenuHandler" text="Add Author" />
              </items>
            </Menu>
            <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#MenuHandler" text="Close" />
         </items>
      </Menu>
   </menus>
   <padding>
      <Insets bottom="30.0" />
   </padding>
</MenuBar>
