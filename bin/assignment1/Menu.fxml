<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <menus>
      <Menu mnemonicParsing="false" text="Menu">
         <items>
            <MenuItem fx:id="AuthorListMenuItem" mnemonicParsing="false" onAction="#MenuHandler" text="Author List" />
            <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#MenuHandler" text="Close" />
         </items>
      </Menu>
   </menus>
   <padding>
      <Insets bottom="30.0" />
   </padding>
</MenuBar>
